<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping 
	PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="br.com.sgrauto.entity.Marca" table="MARCA">
		<id name="codigo" column="MAR_COD">
			<generator class="sequence">
				<param name="sequence">s_marca</param>
			</generator>
		</id>
		<property name="descricao" column="MAR_DESC" />
	</class>
</hibernate-mapping>